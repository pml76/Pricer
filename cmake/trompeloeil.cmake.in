cmake_minimum_required(VERSION 2.8.2)

project(trompeloeil-download NONE)

include(ExternalProject)

ExternalProject_Add(Trompeloeil
        GIT_REPOSITORY    https://github.com/rollbear/trompeloeil.git
        GIT_TAG           master
        CMAKE_ARGS        "-DCMAKE_BUILD_TYPE=Release" "-DCMAKE_INSTALL_PREFIX=${CMAKE_BINARY_DIR}/trompeloeil-install"
        SOURCE_DIR        "${CMAKE_BINARY_DIR}/trompeloeil-src"
        BINARY_DIR        "${CMAKE_BINARY_DIR}/trompeloeil-build" )
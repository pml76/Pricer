cmake_minimum_required(VERSION 2.8.2)

project(googlebenchmark-download NONE)

include(ExternalProject)

ExternalProject_Add(GoogleBenchmark
        GIT_REPOSITORY    https://github.com/google/benchmark.git
        GIT_TAG           master
        CMAKE_ARGS        "-DBENCHMARK_DOWNLOAD_DEPENDENCIES=ON" "-DCMAKE_BUILD_TYPE=Release" "-DCMAKE_INSTALL_PREFIX=${CMAKE_BINARY_DIR}/googlebenchmark-install"
        SOURCE_DIR        "${CMAKE_BINARY_DIR}/googlebenchmark-src"
        BINARY_DIR        "${CMAKE_BINARY_DIR}/googlebenchmark-build" )